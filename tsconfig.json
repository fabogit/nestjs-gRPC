{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "module": "commonjs",
        "noFallthroughCasesInSwitch": false,
        "noImplicitAny": false,
        "outDir": "./dist",
        "paths": {
            "@app/common": [
                "libs/common/src"
            ],
            "@app/common/*": [
                "libs/common/src/*"
            ]
        },
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictBindCallApply": false,
        "strictNullChecks": true,
        "target": "ES2022"
    }
}